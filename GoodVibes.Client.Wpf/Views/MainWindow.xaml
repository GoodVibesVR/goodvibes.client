<Window x:Class="GoodVibes.Client.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:core1="clr-namespace:GoodVibes.Client.Core;assembly=GoodVibes.Client.Core"
        Title="{Binding Title}" Height="600" Width="800" 
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen" Background="Transparent"
        Loaded="Window_Loaded" >
    <WindowChrome.WindowChrome>
        <WindowChrome CornerRadius="0" GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>
    <Grid Margin="0,0,0,0">
        <ContentControl Panel.ZIndex="100" x:Name="HeaderContent" prism:RegionManager.RegionName="{x:Static core1:RegionNames.ContentHeaderRegion}" Opacity="1" VerticalAlignment="Top" Height="25" Margin="0,0,0,0" Grid.RowSpan="2" />
        <ContentControl prism:RegionManager.RegionName="{x:Static core1:RegionNames.MenuRegion}" Opacity="1" HorizontalAlignment="Left" Width="200" Margin="0,0,0,0" Grid.RowSpan="2" />
        <ContentControl prism:RegionManager.RegionName="{x:Static core1:RegionNames.ContentRegion}" Opacity="1" Margin="200,0,0,0" Grid.RowSpan="2" />
    </Grid>
</Window>