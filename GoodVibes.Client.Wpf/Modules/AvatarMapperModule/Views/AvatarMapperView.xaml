                                    Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    DisplayMemberPath="Name"
                                    ItemSeparator=";"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
                -->
            </StackPanel>
        </ScrollViewer>
    </Grid>

</UserControl>
